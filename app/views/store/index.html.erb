<% provide(:products, 'active') %>
<% provide(:title, 'Home') %>

<%= render 'shared/slider' %>
<%= render 'shared/cursual' %>

<div class="main_bg1">
  <div class="wrap">  
    <div class="main1">
      <h2>featured products</h2>
    </div>
  </div>
</div>

<div class="main_bg">
  <div class="wrap">  
    <div class="main">
      <% if @products.empty? %>
        <b>Products not found</b>
      <% else %>

        <% i = 0 %>
        <% @products.each do |p| %>
          <% i < 3 ? i += 1 : i = 1 %>

          <% if i == 1 %>
            <div class="grids_of_3">
          <% end %>

              <div class="grid1_of_3">
                <%= link_to store_product_path(p.product) do %>
                  <%= image_tag(p.product.photo) %>
                  <h3><%= truncate(p.product.name, length: 60) %></h3>
                  <div class="price"><h4>$<%= p.product.price %><span>shop now</span></h4></div>
                  <span class="b_btm"></span>
                <% end %>
              </div>

          <% if i == 3 %>
              <div class="clear"></div>
            </div>
          <% end %>

        <% end %>

        <% if i > 0 && i != 3 %>
           <div class="clear"></div>
          </div>
        <% end %>

      <% end %>
    </div>
  </div>
</div>
